<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <% if(orders.length>0) { %>
    <ul>
        <% for(order of orders) { %>
        <li><%= order.id %></li>
        <ul>
            <% order.products.forEach(item => { %>
            <li><%= item.title %> (<%= item.orderItem.quantity %>) </li>
            <% }) %>
        </ul>
        <% } %>
    </ul>

    <% } else { %>

    <h1> No Orders</h1>
    <% } %>
    <%- include('../includes/end.ejs') %>